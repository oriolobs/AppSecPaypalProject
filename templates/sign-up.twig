{% extends "base.twig" %}

{% block title %}SignUp page{% endblock %}

{% block content %}


  <div class="py-5 text-center parallax cover gradient-overlay" style="	background-image: url('/assets/img/paypal.png');	position: relative;	background-position: center center;	background-size: cover;	background-repeat: repeat;">
    <div class="container d-flex flex-column">
      <div class="row my-auto">
        <div class="col-md-12 text-white">
          <div class="row">
            <div class="col-md-12">
              <div class="row">
                <div class="col-md-12">
                  <h2 class="">SIGN UP</h2>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                  <form name="sign-up" action="sign-up" method="post">
                    <div class="form-group"> <label>Email address</label> <input type="email" name="email" class="form-control" placeholder="Enter email" pattern="[a-zA-Z0-9_.-]*[@]\bsalle.url.edu" required> <small class="form-text text-muted">Only @salle.url.edu domain is allowed.</small> </div>
                    <div class="form-group"> <label>Password</label> <input type="password" name="password" class="form-control" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{5,}" required> <small class="form-text text-muted">Must contain more than 5 characters, both upper and lower case letters and numbers</small> </div>
                    <div class="form-group"> <label>Birthday (+18)</label> <input type="date" name="birthday" class="form-control" placeholder="Birthday" required>  </div>
                    <p for="error">{{ error }}</p>
                    <div class="form-group"> <label contenteditable="true">Phone Number (Optional). (+34) prefix added</label> <input type="text" name="phone_number" class="form-control" placeholder="Phone Number" maxlength="9" minlength="9"> </div> <button type="submit" value="Send" class="btn btn-primary">Submit</button>
                  </form>
                </div>
                <div class="col-md-4"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <script src="assets/js/parallax.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.js"></script>
  <script>
    $(document).ready(function() {
      $('[data-toggle="popover"]').popover();
      $('[data-toggle="tooltip"]').tooltip();
      $('#datepicker-example').datepicker({
        calendarWeeks: true,
        autoclose: true,
        todayHighlight: true
      });
    });
  </script>
{% endblock %}
